<section class="cards-section" id="cards-section">
  <div class="container">
    <h2 class="special-heading">Portfolio</h2>
    <p>If you do it right, it will last forever.</p>
    <div class="cards-grid">
      {{#each productsArray as |product|}}
        <div class="card">
          <div class="d-e">
            <i
              class="fa-solid fa-trash shake-horizontal "
              style="color: #f10909; cursor:pointer;"
              hx-delete="products/{{product._id}}"
              hx-target="closest .card"
              hx-swap="outerHTML"
            ></i>
          </div>
          <img
            {{!-- src="http://localhost:5834/products/image/{{product._id}}" --}}
            {{! the previous uri should be changed on deployment to this next one  }}
            src="https://htmx-store-production.up.railway.app/products/image/{{product._id}}"
            alt="image"
          />
          <div class="info">
            <h3>{{product.title}}</h3>
            <p>Body: {{product.body}}</p>
            <h4>price:{{product.price}}</h4>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>